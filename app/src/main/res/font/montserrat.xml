<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- For now, this file is just for show
     because there's no way to get a font based on font weight on API < 28.
     But hopefully Android will graduate from stone age soon,
     and release a Compat lib for it (-_-) <- this is me believing
     -->

    <font
        app:font="@font/montserrat_thin"
        app:fontStyle="normal"
        app:fontWeight="100" />
    <font
        app:font="@font/montserrat_extralight"
        app:fontStyle="normal"
        app:fontWeight="200" />
    <font
        app:font="@font/montserrat_light"
        app:fontStyle="normal"
        app:fontWeight="300" />
    <font
        app:font="@font/montserrat_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />
    <font
        app:font="@font/montserrat_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />
    <font
        app:font="@font/montserrat_semibold"
        app:fontStyle="normal"
        app:fontWeight="600" />
    <font
        app:font="@font/montserrat_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />
    <font
        app:font="@font/montserrat_extrabold"
        app:fontStyle="normal"
        app:fontWeight="800" />
    <font
        app:font="@font/montserrat_black"
        app:fontStyle="normal"
        app:fontWeight="900" />
</font-family>