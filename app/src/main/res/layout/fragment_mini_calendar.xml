<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mini_calendar_size"
    android:layout_height="@dimen/mini_calendar_size">

    <ImageView
        android:id="@+id/mini_calendar_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_calendar_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <!-- Hardcoded text is only for the demo, gimme a break here -->

    <TextView
        android:id="@+id/mini_calendar_month"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/emilys_candy"
        android:gravity="center"
        android:text="Jan."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mini_calendar_background"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/mini_calendar_day"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:fontFamily="@font/calson_antique_bold"
        android:gravity="center"
        android:text="30"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/mini_calendar_day_particle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calson_antique_bold"
        android:text="th"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/mini_calendar_day"
        app:layout_constraintTop_toTopOf="@id/mini_calendar_day"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>