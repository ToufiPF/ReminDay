<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/additional_info_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ch.epfl.reminday.ui.view.ClickableDrawableMaterialEditText
        android:id="@+id/additional_info_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@null"
        android:drawableEnd="@drawable/ic_baseline_close_24"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/additional_info"
        android:inputType="textMultiLine"
        android:text="@string/are_you_sure"
        android:textSize="16sp"
        tools:ignore="TextContrastCheck" />

</com.google.android.material.textfield.TextInputLayout>